{
  "env": {
		"node": true,
		"browser": false,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "warn",
      [2, 2]
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "never"
    ]
  }
}
